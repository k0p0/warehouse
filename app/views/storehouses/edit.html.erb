


<% if current_user.id == @storehouse.user_id %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for(@storehouse) do |f| %>
      <%= f.error_notification %>
      <%= f.input :name, label: "Stroehouse's name :" %>
      <%= f.input :address, label: "Storehouse's address :" %>
      <%= f.input :description, label: "Storehouse's description :" %>
      <%= f.input :capacity, label: "Storehouse's capacity (m3):" %>
      <%= f.input :day_price, label: "Storehouse's price per day (â‚¬):" %>
      <%= f.input :picture %>
      <%= f.input :picture_cache, as: :hidden %>
      <br>
      <%= f.button :submit , class:'btn-medium book'%>
      <% end %>
      <br>
    </div>
  </div>
</div>
<% else %>
<div class="container">
  <div class="row text-center">
    <div class="col-xs-12">
<h1>This storehouse does not belong to you !</h1>
<br>
<%= link_to "Back to my storehouses", admin_storehouses_path(current_user), class: "btn-medium"  %>
    </div>
  </div>
</div>
<% end %>
