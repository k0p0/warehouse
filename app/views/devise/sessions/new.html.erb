<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <h2 class="header-color">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, placeholder: "John@gmail.com" %>
            <%= f.input :password, required: false, placeholder: "password" %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
                <%= f.button :submit, "Log in", class: "btn btn-primary" %>
          </div>
          <p style="padding-top: 8px">or</p>
          <div class="">

                <%= link_to "Sign up",new_registration_path(resource_name), class: "btn btn-primary" %>
                <%- resource_class.omniauth_providers.each do |provider| %>
                  <%= link_to "<i id='fb-connect' class='fa fa-facebook-square fa-lg'></i> connect".html_safe, omniauth_authorize_path(resource_name, provider), class: "btn btn-primary"%>
                <% end -%>
                <%= link_to "lost password ?", new_password_path(resource_name), class: "btn btn-primary" %>

          </div>
      <% end %>
    </div>
  </div>
</div>


