<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <h2 class="header-color">Forgot your password?</h2>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, placeholder: "John@gmail.com" %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Reset password", class: "btn btn-primary" %>
      </div>
      <br>
      <div>
        <%= link_to "Sign up",new_registration_path(resource_name), class: "btn btn-primary" %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-primary" %>
      </div>
      <br>
      <div>
        <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-primary" %>
        <% end -%>
      </div>
      <% end %>
    </div>
  </div>
</div>
