<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://www.chicagonow.com/small-biz-blog/files/2017/05/warehouse.jpg');">
  <div class="banner-content">
    <h1>Stock Away</h1>
    <p>Maximise your warehouse</p>
    <%= link_to 'See our warehouses', storehouses_path, class: "btn btn-medium btn-lg" %>
  </div>
</div>

<div class="text-center">
    <div class="stats-home">
      <div class="title row">
        <h2>Why choose us ?</h2>
      </div>
        <div class="row stats">
        <div class="stat">
          <i class="fa fa-globe icon"></i>
          <h3><%= Storehouse.count %> warehouses</h3>
       </div>
        <div class="stat">
          <i class="fa fa-expand icon"></i>
          <h3><%= Storehouse.sum("capacity") %> m&sup3; availables</h3>
       </div>
        <div class="stat">
          <i class="fa fa-eur icon"></i>
          <h3>around €<%= Storehouse.average("day_price").round %>/day </h3>
       </div>
       </div>
    </div>

  <div class="customers-home">
    <div class="title row">
      <h2>They work with us: </h2>
    </div>
    <div class="customers">
      <ul class="list-unstyled list-inline">
        <li><img alt="XPO" src="https://www.nyse.com/publicdocs/nyse/events/images/XPO_web_1920.png" class="customer-img" /></li>
        <li><img alt="Bolloré" src="https://upload.wikimedia.org/wikipedia/commons/thumb/f/f3/Bollore_Logistics_Logo.png/1200px-Bollore_Logistics_Logo.png" class="customer-img"/></li>
        <li><img alt="DB Schenker" src="http://www.anim-16.com/local/cache-vignettes/L260xH158/arton231-16821.png?1501528372" class="customer-img" /></li>
        <li><img alt="Geodis" src="https://upload.wikimedia.org/wikipedia/fr/thumb/f/fb/Geodis.svg/768px-Geodis.svg.png" class="customer-img" /></li>
      </ul>
    </div>
  </div>

  <div class="searchbar container">
    <div class="title row">
      <h2>Find our warehouses:</h2>
          <div id="custom-search-input">
              <div class="input-group">
                  <input type="text" class="form-control input-lg" id="input-user" placeholder="Type your address" />
                  <span class="input-group-btn">
                      <button class="btn btn-info btn-lg" type="button">
                          <i class="glyphicon glyphicon-search"></i>
                      </button>
                  </span>
              </div>
          </div>
      </div>
    </div>
</div>

<%= content_for(:after_js) do %>

  <script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyD_RAkY8s72vyF-J80ulRyBuegrj_7yuN8"></script>

  <script>
    var flat_address = $('#input-user').get(0);

    if (flat_address) {
      var autocomplete = new google.maps.places.Autocomplete(flat_address, { types: ['geocode'] });
      google.maps.event.addDomListener(flat_address, 'keydown', function(e) {
        if (e.keyCode == 13) {
          e.preventDefault(); // Do not submit the form on Enter.
        }
      });
    }
  </script>
<% end %>




